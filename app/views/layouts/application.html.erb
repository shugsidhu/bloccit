<!DOCTYPE html>
<html>
  <head>
    <title>Bloccit</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div>
        <ul class="nav nav-tabs collapse navbar-collapse" id="navbarSupportedContent">
         <li><%= link_to "Bloccit", root_path %></li>
         <li><%= link_to "About", about_path %></li>
         <li><%= link_to "Topics", topics_path%></li>
         <div class="pull-right user-info">
           <% if current_user %>
                  <%= image_tag current_user.avatar_url(48), class: :gravatar %>
                   <div class="pull-right text-align-left gravatar">
                     <strong><%= link_to current_user.name, user_path(current_user) %></strong><br />
                     <%= link_to "Sign Out", session_path(current_user), method: :delete %></li>
                   </div>
              <% else %>
                <li class="pull-right"><%= link_to " Sign In", new_session_path %></li>
                <li class="pull-right"><%= link_to "Sign Up", new_user_path %></li>
           <% end %>
        </div>
      </ul>
   </div>
   <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
